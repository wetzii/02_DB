ALTER TABLE Schulen ADD COLUMN sDirNNAME VARCHAR(50);

UPDATE Schulen
SET sDirNNAME = 'Hofer'
Where SchuleID == 1;

UPDATE Schulen
SET sDirNNAME = 'Gruber'
Where SchuleID == 2;

UPDATE Schulen
SET sDirNNAME = 'Schneider'
Where SchuleID == 3;

UPDATE Schulen
SET sDirNNAME = 'Bauer'
Where SchuleID == 4;

ALTER TABLE Schulen REname to Schule;
ALTER TABLE Schule Rename Column Name to sName;
ALTER TABLE Schule Rename Column Gründung to sGruendung;

----------------------------------------------------------------------

ALTER TABLE Klassen ADD COLUMN kStaerke VARCHAR(50);
ALTER TABLE Klassen ADD COLUMN SchuleID References Schule(SchuleID);
ALTER TABLE Klassen ADD COLUMN kStearke INTEGER;

Update Klassen 
SET kStearke = 26, SchuleID = 1, KVNName = 'KEP'
WHERE KID == 1;

Update Klassen 
SET kStearke = 25, SchuleID = 3, KVNNAME = 'GSC'
WHERE KID == 2;


Update Klassen 
SET kStearke = 27, SchuleID = 1, KVNNAME = 'STSE'
WHERE KID == 3;


Update Klassen 
SET kStearke = 17, SchuleID = 1, KVNNAME = 'SC'
WHERE KID == 4;

ALter Table Klassen Rename to Klasse;
ALTER TABLE Klasse Rename Column Bezeichnung to kBezeichnung;
