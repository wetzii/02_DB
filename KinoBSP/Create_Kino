CREATE TABLE Kino (
  KID INTEGER PRIMARY KEY AUTOINCREMENT,
  Name VARCHAR(50),
  Town VARCHAR(50),
  Company VARCHAR(50)
);

CREATE TABLE CinemaHall (
  HID INTEGER PRIMARY KEY AUTOINCREMENT,
  Places INTEGER,
  UpsidRow INTEGER,
  KID INTEGER REFERENCES Kino(KID) 
);

CREATE TABLE Movie (
  MID INTEGER PRIMARY KEY AUTOINCREMENT,
  Title VARCHAR(50),
  Genre VARCHAR(50),
  Length INTEGER,
  SpawnYear INTEGER
);

CREATE TABLE Actor (
  ACID INTEGER PRIMARY KEY AUTOINCREMENT,
  Name VARCHAR(50),
  Age INTEGER
);

CREATE TABLE Language (
  LanID INTEGER PRIMARY KEY AUTOINCREMENT,
  LanName VARCHAR(50)
);

CREATE TABLE Showtime (
  SID INTEGER PRIMARY KEY AUTOINCREMENT,
  Price REAL, --Real ist wie FLoat laut CHATGPT weil Float gibt es glaube nicht
  Date DATETIME,
  HID INTEGER REFERENCES CinemaHall(HID),
  MID INTEGER REFERENCES Movie(MID)
);

CREATE TABLE Movie_Actor (
  MAID INTEGER PRIMARY KEY AUTOINCREMENT,
  MID INTEGER REFERENCES Movie(MID),
  ACID INTEGER REFERENCES Actor(ACID)
);

CREATE TABLE Movie_Language (
  MLID INTEGER PRIMARY KEY AUTOINCREMENT,
  MID INTEGER REFERENCES Movie(MID),
  LanID INTEGER REFERENCES Language(LanID)
);